@page "{id:int}"
@model ContactManager.Pages.Contacts.DeleteModel

<h1>Delete Contact</h1>

<h3>Are you sure you want to delete this contact?</h3>

<div>
    <h4>Contact</h4>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Contact.Name</dd>

        <dt class="col-sm-2">Contact Number</dt>
        <dd class="col-sm-10">@Model.Contact.ContactNumber</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Contact.Email</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Contact.ID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
